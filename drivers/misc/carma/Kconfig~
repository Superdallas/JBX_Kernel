config CARMA_FPGA
	tristate "CARMA DATA-FPGA Access Driver"
	depends on FSL_SOC && PPC_83xx && MEDIA_SUPPORT && HAS_DMA && FSL_DMA
	select VIDEOBUF_DMA_SG
	default n
	help
	  Say Y here to include support for communicating with the data
	  processing FPGAs on the OVRO CARMA board.

config CARMA_FPGA_PROGRAM
	tristate "CARMA DATA-FPGA Programmer"
	depends on FSL_SOC && PPC_83xx && MEDIA_SUPPORT && HAS_DMA && FSL_DMA
	select VIDEOBUF_DMA_SG
	default n
	help
	  Say Y here to include support for programming the data processing
	  FPGAs on the OVRO CARMA board.

config LIVE_OC
        bool "Support for Live OC"
        default y
        help
          Say Y here to enable Live OC

config CUSTOM_VOLTAGE
	bool "Support for Custom Voltage"
	default y
	help
	  Say Y here to enable Custom Voltage

